<Page x:Class="UI.WPF.ReportStudentAverage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UI.WPF"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="ReportStudentAverage"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d">

    <DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left" Text="FileNumber" />
            <TextBox x:Name="TxtFileNumber" MinWidth="100" />
            <Button Width="200"
                    Click="Show_Click"
                    Content="Show"
                    DockPanel.Dock="Left" />
            <TextBlock DockPanel.Dock="Left" Text="Average: " />
            <TextBlock x:Name="TxtAverage" DockPanel.Dock="Left" />
        </DockPanel>
    </DockPanel>
</Page>
