<Page x:Class="UI.WPF.ReportBestStudents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UI.WPF"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="ReportBestStudents"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d">

    <DockPanel>
        <DockPanel HorizontalAlignment="Center"
                   DockPanel.Dock="Top"
                   LastChildFill="False">
            <TextBlock DockPanel.Dock="Left" Text="Year" />
            <TextBox x:Name="TxtYear" MinWidth="100" />
            <Button Width="200"
                    Click="Show_Click"
                    Content="Show"
                    DockPanel.Dock="Left" />
            <Button Width="200"
                    Click="Export_Click"
                    Content="Export as PDF"
                    DockPanel.Dock="Left" />
        </DockPanel>
        <DataGrid Name="reportGrid" ItemsSource="{Binding}" />
    </DockPanel>
</Page>
